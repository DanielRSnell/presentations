---
import GeneralLayout from '../layouts/general.astro';
import { Card } from '@/components/ui/card';

// Presentations data - easy to add new presentations here
const presentations = [
  {
    id: 'btcs',
    title: 'Agent Architecture Comparison',
    subtitle: 'Microsoft CoPilot Stack vs N8N-Based Solution',
    date: 'March 2025',
    series: 'FreshServices Integration',
    featuring: 'BTCS Group',
  },
  // Add new presentations here following the same structure
];
---

<GeneralLayout content={{ title: 'Presentation Library' }}>
  <div class="max-w-4xl mx-auto py-6 px-4">
    <div class="text-center mb-8">
      <h1 class="text-2xl font-bold">Presentation Library</h1>
      <p class="text-sm text-muted-foreground">Select a presentation to view</p>
    </div>

    <div class="border rounded-lg overflow-hidden">
      {presentations.map((presentation, index) => (
        <a 
          href={`/${presentation.id}`} 
          class:list={[
            "block border-b last:border-b-0 hover:bg-gray-50 transition-colors",
            "p-4"
          ]}
        >
          <div class="text-xs text-muted-foreground">{presentation.date}</div>
          <h2 class="text-xl font-bold mt-1">{presentation.title}</h2>
          <p class="text-sm">{presentation.subtitle}</p>
          
          <div class="flex flex-wrap gap-x-4 mt-2 text-xs">
            <span class="text-muted-foreground">Series: {presentation.series}</span>
            <span>Featuring: {presentation.featuring}</span>
          </div>
          
          <div class="mt-2">
            <span class="text-sm font-medium">View Presentation â†’</span>
          </div>
        </a>
      ))}
    </div>
  </div>
</GeneralLayout>
